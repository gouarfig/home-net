{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "osx": {
        "command": "sh",
        "args": [
            "-c"
        ]
    },
    "windows": {
        "command": "cmd",
        "args": [
            "/C"
        ]
    },
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "install",
            "args": [
                "npm",
                "install"
            ]
        },
        {
            "taskName": "update",
            "args": [
                "npm",
                "update"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "npm",
                "run",
                "test"
            ]
        },
        {
            "taskName": "clean",
            "args": [
                "./node_modules/.bin/gulp",
                "clean"
            ]
        }
    ]
}